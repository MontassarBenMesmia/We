{% extends 'base2.html.twig' %}

{% block title %}Liste Réponses{% endblock %}

{% block body %}
  
    <div class="card-header text-center">
      <h1>Liste Réponses</h1>
    </div>
    <div class="card-body d-flex flex-column align-items-center">
      <table class="table table-striped table-striped-bg-default mt-3">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Type Reclamation</th>
            <th scope="col">Response</th>
          </tr>
        </thead>
        <tbody>
          {% for reponse in reponses %}
            <tr>
              <td>{% if reponse.reclamation %}{{ reponse.reclamation.email }}{% endif %}</td>
              <td>{% if reponse.reclamation %}{{ reponse.reclamation.typeReclamation }}{% endif %}</td>
              <td>{{ reponse.content }}</td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5">no records found</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

{% endblock %}