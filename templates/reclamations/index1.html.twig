{% extends 'base.html.twig' %}

{% block body %}
     <div class="card-body">
    <table class="table table-striped table-striped-bg-default mt-3">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">Type Reclamation</th>
          <th scope="col">Description</th>
          <th scope="col">Etat</th>
          <th scope="col">Actions</th>

        </tr>
      </thead>
      <tbody>
        {% for reclamation in reclamations %}
                <tr>
                    <td>{{ reclamation.email }}</td>
                    <td>{{ reclamation.typeReclamation }}</td>
                    <td>{{ reclamation.description }}</td>
                    <td>{{ reclamation.etat }}</td>
                    <td>
              <p>
                <a href="{{ path('edit_reclamations', {'id': reclamation.id}) }}" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Edit</a>
              </p>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="4">No records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <p>
      <a href="{{ path('new_reclamations') }}" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Create new</a>
    </p>
{% endblock %}
