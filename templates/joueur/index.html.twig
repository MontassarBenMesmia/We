{% extends 'back-office.html.twig' %}

{% block title %}Joueur index{% endblock %}
{%block search %}
<form class="d-flex align-items-center h-100" action="{{ path('app_joueur_index') }}" method="GET">
    <div class="input-group">
      <div class="input-group-prepend bg-transparent">
        <i class="input-group-text border-0 mdi mdi-magnify"></i>
</div>
<input type="text" class="form-control bg-transparent border-0" placeholder="Search products">
</div>
</form>
{% endblock %}
{% block body %}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a href="{{ path('app_joueur_new') }}" class="btn btn-primary mb-2"> Add joueur 
            </a>
            <a href="{{ path('app_generate_pdf') }}" class="btn btn-primary mb-2">Generate PDF</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Age</th>
                        <th>Nationality</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for joueur in joueurs %}
                    <tr>
                        <td>{{ joueur.nom }}</td>
                        <td>{{ joueur.prenom }}</td>
                        <td>{{ joueur.age }}</td>
                        <td>{{ joueur.nationalite }}</td>
                        <td>{{ joueur.email }}</td>
                        <td>{{ joueur.equipe.name }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_joueur_edit', {'id': joueur.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                               {{ include('joueur/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}