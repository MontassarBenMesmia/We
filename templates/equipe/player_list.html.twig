{% extends 'base.html.twig' %}

{% block title %}Liste des Joueurs{% endblock %}

{% block body %}
     <div class="container">
        <div class="row mb-4">
            <div class="col-md-2">
                <img src="{{ asset('images/' ~ equipe.image) }}" alt="Image" class="img-fluid mb-3">
            </div>
            <div class="col-md-10">
                <h4 class="card-title">{{ equipe.name }}</h4>
                <p class="card-text">{{ equipe.date }}</p>
            </div>
        </div>
    <div class="row justify-content-center">
        {% for joueur in joueurs %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ joueur.prenom }} {{ joueur.nom }}</h5>
                        <p class="card-text">Age: {{ joueur.age }}</p>
                        <p class="card-text">Nationalit√©: {{ joueur.nationalite }}</p>
                        <p class="card-text">Email: {{ joueur.email }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <p class="text-center">
        <a href="{{ path('equipes') }}" class="btn btn-secondary">Retour</a>
    </p>
{% endblock %}