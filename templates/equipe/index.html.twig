{% extends 'back-office.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}

<div class="col-lg-12 grid-margin stretch-card">
  
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th colspan="3">Logo</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Nombre Joueurs</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for equipe in equipes %}
                    <tr>
                        <td colspan="3"><img src="{{ asset('images/' ~ equipe.image) }}" alt="Image" style="max-width: 200px;"></td>
                        <td>{{ equipe.name }}</td>
                        <td>{{ equipe.date }}</td>
                        <td>{{ equipe.nbJoueur }}</td>
                        <td>
                            <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                            <a href="{{ path('app_equipe_delete', {'id': equipe.id}) }}" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="text-right mt-3">
                <a href="{{ path('app_equipe_new') }}" class="btn btn-sm btn-primary">Add equipe</a>
            </div>
        </div>
    </div>
</div>





{% endblock %}
