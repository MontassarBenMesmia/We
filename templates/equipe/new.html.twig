{% extends 'back-office.html.twig' %}

{% block title %}New Equipe{% endblock %}

{% block body %}
<div class="text-center mt-4">
    <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">Back to List</a>
</div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">New Equipe</h2>
                    <div class="single-footer-widget">
                        
                        <div class="about-the-store">
                            {{ form_start(form) }}

                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.date) }}
                                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            </div>

                             <div class="form-group">
                                {{ form_label(form.image) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                            
                            {{ form_end(form) }}
                            
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<script>/* Adjust footer styles */
    .footer {
        background-color: #f8f9fa;
        padding: 20px 0;
        margin-top: 20px;
    }
    
    .footer-inner-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    /* Adjust form container styles */
    .container-fluid {
        padding: 20px;
    }
    
    .card {
        border: none;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }
    
    .card-title {
        color: #333;
        font-size: 24px;
    }
    
    .card-body {
        padding: 30px;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }
    
    .btn-secondary:hover {
        background-color: #5a6268;
    }
</script>
{% endblock %}
